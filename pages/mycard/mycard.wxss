.cardNav{
  display: flex;
  height: 120rpx;
  /* position: fixed; */
  background: #fff;
  width: 100%;
  z-index:999
}
.cardNav view{
  width: 27.3%;
  margin:0 3%;
  text-align: center;
  line-height: 120rpx;
  font-size: 32rpx
}
.activeBorder{
  border-bottom: 2rpx solid #9c846a
}
.content{
   /* padding-top: 140rpx; */
   height: 100%
}
.picItem{
  margin: 30rpx;
  position: relative;
  font-size: 0;
  overflow: hidden;
  border-radius: 10rpx;
}
.picItem image{
  width: 100%;
  height: 300rpx
}
.picItem .shengyu{
  /* position: absolute; */
  /* left: 80%; */
  /* bottom: 5%; */
  color: #fff;
  font-size: 24rpx
}
.picItem .shengyu text{
  font-size: 28rpx;
  color: #FF9900
}
.nothing{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nothing image{
  margin-top: 80rpx;
  height: 240rpx;
  width: 240rpx
}
.nothing text{
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #999999
}
.picItem .time{
  /* position: absolute;
  left: 30rpx;
  bottom: 5%; */
  color: #fff;
  font-size: 24rpx
}
.picItem .time text{
   color: #FF9900;
   font-size: 28rpx
}
.footer-info {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(0,0,0,0.5);
}