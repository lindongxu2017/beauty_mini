/* pages/allorder/allorder.wxss */
page{
  height: 100%;
  display: flex;
  flex-direction: column 
}
.container{
  flex: 1;
  display: flex;
  flex-direction: column 
}
.cardNav{
  display: flex;
  height: 120rpx;
}
.cardNav view{
  width: 34%;
  margin: 0 8%;
  text-align: center;
  line-height: 120rpx;
}
.activeBorder{border-bottom:  2rpx solid #9c846a}
.scroll-wrap{
  line-height: 85rpx;
  display:flex;
  justify-content: space-around;
  width: 100%;
  white-space: nowrap;
}
.scroll-wrap view{
  text-align: center;
  font-size: 24rpx;
  display: inline-block;
  color: #acacac;
  margin:0rpx 35rpx
}
.scroll-wrap .active{
  color: #7b6e5b;
}
.normal{
  flex: 1;
  background: #f1f1ef;
}
.not{
  margin-top: 54rpx;
  text-align: center;
  color: #a0a09e;
  font-size: 26rpx
}
.cardArea{
  background: #ffffff;
  margin-top:20rpx;
  color: #9b9b99;
  line-height: 32rpx;
   font-size: 28rpx
}
.cardArea .title{
  padding: 32rpx 40rpx;
  border-bottom:1rpx solid #f2f2f2
}
.status{
  float: right;
  color:#7b6e5b;
}
.productName{
  font-size: 32rpx;
  color: #000;
  display: flex;
  justify-content: space-between;
  font-weight: 700
}
.productName text:nth-child(2){
  color: #a0a09e;
  font-weight: 400
}
.payWay{
  font-size: 28rpx;
  color: #a0a09e;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx
}
.time{
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #f1f1ef
}
.money {
  height: 96rpx;
  display: flex;
  padding: 0 40rpx;
  flex-direction: row-reverse;
  color: #a0a09e
}
.money .monetItem1,.money .monetItem2{
  line-height: 96rpx;
}
.money .monetItem1{
  display: flex;
  margin-left: 20rpx
}
.money .monetItem1 text:nth-child(1){
  color: #000;
  font-size: 28rpx
}
.money .monetItem1 text:nth-child(2){
  color: #000;
  font-size: 32rpx
}

