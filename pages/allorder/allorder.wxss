/* pages/allorder/allorder.wxss */
page{
  height: 100%;
  display: flex;
  flex-direction: column 
}
.container{
  flex: 1;
  display: flex;
  flex-direction: column 
}
.scroll-wrap{
  line-height: 85rpx;
  display:flex;
  justify-content: space-around;
  width: 100%;
  white-space: nowrap;
}
.scroll-wrap view{
  text-align: center;
  font-size: 24rpx;
  display: inline-block;
  color: #acacac;
  margin:0rpx 35rpx
}
.scroll-wrap .active{
  color: #7b6e5b;
}
.normal{
  flex: 1;
  background: #f1f1ef;
}
.not{
  margin-top: 54rpx;
  text-align: center;
  color: #a0a09e;
  font-size: 26rpx
}
.cardArea{
  background: #ffffff;
  margin:16rpx 20rpx;
  height: 426rpx;
  border: 1rpx solid #ededed;
  border-radius: 15rpx;
  padding: 32rpx 30rpx;
  color: #9b9b99;
  font-size: 24rpx;
  line-height: 32rpx
}
.title{
  line-height: 32rpx
}
.status{
  float: right;
  color:#7b6e5b;
}
.productName{
  line-height: 100rpx;
  font-size:28rpx;
  color: #000
}
.payWay,.time{
  line-height: 46rpx
}
.time{
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #f1f1ef
}
.money{
  height: 96rpx
}
.money text{
  float: right;
  line-height: 96rpx;
  color:#000
}
.continue,.cancel{
  float: right;
  height: 68rpx;
  width: 180rpx;
  border: 1rpx solid #f1f1ef;
  line-height: 68rpx;
  text-align: center;
  border-radius: 25rpx
}
.cancel{
  margin-right: 20rpx
}
.continue{
  background: #9c846a;
  color: #ffffff
}