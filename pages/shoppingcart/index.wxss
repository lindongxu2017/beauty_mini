/* pages/shoppingcart/index.wxss */
page {
    background-color: #f2f2f2;
    padding-bottom: 140rpx;
}
.danger {
    color: rgb(236, 70, 70);
    /* background-color: #ff0; */
    font-size: 24rpx;
    padding: 7rpx 15rpx;
    border-radius: 5rpx;
    display: inline-block;
}
.list {
    padding: 20rpx;
}
.item {
    background-color: #fff;
    padding: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 5rpx;
}
.icon {
    border: 1px solid #D2B178;
    border-radius: 50%;
    text-align: center;
    margin-top: 60rpx;
}
.icon.active {
    background-color: #DAAD83;
}
.icon.disable {
    visibility: hidden;
}
.icon .iconfont {
    color: #fff;
    font-size: 28rpx;
}
.item {
    display: flex;
    align-items: stretch;
}
.item .avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
    margin: 0 15rpx;
}
.item .info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 5rpx;
}
.name {
    display: flex;
    align-items: center;
}
.name .text {
    flex: 1;
    padding-right: 10rpx;
}
.top .name {
    font-size: 32rpx;
    margin-bottom: 10rpx;
}
.top .price {
    font-size: 24rpx;
    color: #999;
}
.bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.bottom .nums {
    width: 60rpx;
    text-align: center;
    display: inline-block;
}
.bottom .price {
    color: #F3A672;
}
.bottom .unit {
    font-size: 24rpx;
}
.steps {
    color: #9F846B;
}

.submit-bar {
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    background-color: #fff;
    padding: 20rpx 20rpx 20rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.submit-bar .icon {
    margin-top: 0;
    margin-right: 10rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}
.submit-bar .select {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999;
}
.submit-bar .unit {
    font-size: 24rpx;
}
.submit-bar .sum {
    font-size: 28rpx;
    color: #F3A672;
}
.submit-bar .submit {
    width: 300rpx;
    line-height: 80rpx;
    border-radius: 80rpx;
    background: linear-gradient(to right, #D4B379, #B99A64);
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}

.no-data {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.no-data image {
    width: 30%;
}
.no-data .tips {
    font-size: 28rpx;
    color: #999;
    margin-top: 10rpx;
}