/*隐藏框*/
.dialog{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index:1000
}
.dialogitem{
  position: fixed;
  width: 60%;
  max-width: 300px;
  top: 50%;
  height: 55%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 30rpx;
  overflow: hidden;
  z-index: 5000;
}
.dialogitem image{
  width: 100%;
  height: 100%
}