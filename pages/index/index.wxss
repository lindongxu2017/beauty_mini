}

/*隐藏框*/
.dialog{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index:1000
}

.headImageView {
  height: 162rpx;
  width: 163rpx
}

.headImageView image{
  height: 162rpx;
  width: 162rpx
}

.titleText {
  margin-top: 100rpx;
  margin-bottom: 50rpx;
  font-size: 38rpx;
  color: #020e0f;
}

.contentText {
  margin-bottom: 0px;
  font-size: 30rpx;
  color: #666;
}

.authBtn {
  margin-top: 70rpx;
  height: 80rpx;
  font-size: 38rpx;
  width: 330rpx;
  background: #a0856a;
  color: #fff;
  line-height: 80rpx;
  border-radius: 50rpx
}

.pdItem{
  background: #fff;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 25rpx;
  box-shadow: 4rpx 4rpx 4rpx rgba(0, 0, 0, 0.05);
}
.pdItem image{
  height: 300rpx;
  width: 100%;
  border-radius: 16rpx
}
.titelPd{
  height: 42rpx;
  font-size: 32rpx;
  /* font-weight: 700; */
  margin: 20rpx 0 0;
   white-space: nowrap;
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;
}
.sogonPd{
  white-space: nowrap;
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}
.current_price{
  font-size: 32rpx;
  color: #FF9900;
  font-weight: bold;
}
.price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.original_price{
  font-size: 26rpx;
  color: #999;
  margin-left: 20rpx
}
.original_price text{
  text-decoration: line-through
}
.goForLook{
  font-size: 26rpx;
  width: 180rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #A0856A;
  border-radius: 70rpx;
  color: #fff
}