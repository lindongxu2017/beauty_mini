.navigatorTop{
  position: fixed;
  width: 100%;
  height: 74rpx;
  top:0rpx;
  left:0rpx;
  z-index: 10;
  display: flex;
  padding-top:24rpx;
  white-space: nowrap;
}
.active{
  border:1rpx solid #797572;
   color: #797572;
}
.banner{
  height: 348rpx;
  width: 100%
}
.swiperItem{
  margin-right:244rpx;
}
.slide-image{
   width: 100%;
   height: 348rpx;
}
.conentNav{
  height: 190rpx;
  padding: 25rpx 40rpx;
  display: flex
}
.navItem{
  display: flex;
  flex-direction: column;
  margin-right: 50rpx
}
.conentNav image{
  margin-bottom: 10rpx;
    width: 120rpx;
    height: 120rpx;
}
.conentNav text{
  font-size: 28rpx;
  display: block;
  width: 120rpx;
