<!--index.wxml-->
<header header='{{header}}'></header>
<view class="indexItem">
    <view class="banner">
      <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}"
        duration="{{duration}}"  indicator-active-color="#6e6158"
        circular="true" style="height:348rpx" 
        >
        <block wx:for="{{imgUrls}}" wx:key="index">
          <swiper-item class="swiperItem">
            <image src="{{item}}" class="slide-image"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class="functionArea">
      <block wx:for="{{cardType}}" wx:key="index">
        <view class="functionItem">
          <view class="storecard">储存卡</view>
          <view class="money">{{item.money}}元</view>
          <view class="giveMoney">送{{item.depositMoney}}元</view>
          <view class="depositMoney" bindtap="handleDeposit" data-money="{{item.money}}" data-depositmoney="{{item.depositMoney}}" data-index="{{index}}">去充值</view>
        </view>
      </block>
    </view>
</view>