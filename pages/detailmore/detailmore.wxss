/* pages/detailmore/detailmore.wxss */
page{
  height: 100%;
  display: flex;
  flex-direction: column 
}
.container{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.firstLine{
  display: flex;
  justify-content: space-between;
  margin: 20rpx 40rpx 0;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f2f2f2
}
.left{
  display: flex;
  flex-direction: column
}
.left text{
  font-size: 26rpx;
  color: #999999
}
.left .campany{
  font-size: 30rpx;
  color:#000;
  margin-bottom:10rpx 
}
.right{
  font-size: 32rpx
}
.gap{
  flex: 1;
  background: #f2f2f2
}
.project{
  margin:0 40rpx
}
.projectTitle{
  display: flex;
  border-bottom: 2rpx solid #f2f2f2
}
.projectTitle view{
  font-size: 30rpx;
  font-weight: bold;
  padding: 25rpx 0
}
.projectTitle view:nth-child(1),.projectItem view:nth-child(1){
  width: 50%
}
.projectTitle view:nth-child(2),.projectItem view:nth-child(2){
  width: 20%;
  text-align: center
}
.projectTitle view:nth-child(3),.projectItem view:nth-child(3){
  width: 30%;
  text-align: right
}
.projectItem{
  padding: 25rpx 0;
  display: flex;
   border-bottom: 2rpx solid #f2f2f2
}
.total{
  padding: 25rpx 40rpx;
  text-align: right;
  margin-bottom: 130rpx
}
