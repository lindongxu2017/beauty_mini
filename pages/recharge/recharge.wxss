/* pages/recharge/recharge.wxss */
page {
	background-color: rgba(242, 242, 242, 1);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.userinfo {
	background-color: #fff;
	height: 180rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	margin-bottom: 20rpx;
}
.cell {
	display: flex;
	padding: 0 30rpx;
	margin-bottom: 30rpx;
	font-size: 28rpx;
	align-items: flex-end;
}
.lable, .value {
	line-height: 1;
}
.price {
	font-size: 40rpx;
	color: #FF9900;
	font-weight: 700;
}
.panel {
	background-color: #fff;
	padding: 0 30rpx;
    flex: 1;
}
.cell-title {
	padding: 20rpx 0 30rpx;
	font-size: 28rpx;
	color: #999;
	border-bottom: 1px solid #eee;
	margin-bottom: 30rpx;
}
.cell-title text {
	color: #A0856A;
}
.list {
	font-size: 0;
}
.list .item:nth-child(3n-1) {
	margin: 0 18rpx 20rpx;
	box-sizing: border-box;
}
.item {
	border: 1px solid #A0856A;
	color: #A0856A;
	display: inline-block;
	width: -webkit-calc(33.33% - 14rpx);
	width: calc(33.33% - 14rpx);
	text-align: center;
	font-size: 28rpx;
	box-sizing: border-box;
	padding: 20rpx;
	border-radius: 10rpx;
}
.item.active {
	background-color: #A0856A;
	color: #fff;
}
.money {
	font-size: 40rpx;
	font-weight: 700;
}
.flex-cell {
	display: flex;
	align-items: center;
	font-size: 28rpx;
	margin-bottom: 30rpx;
}
.flex-cell .value {
	color: #FF9900;
}
.flex-cell .value text {
	font-weight: 700;
}
.tips {
	padding: 20rpx 0;
	font-size: 24rpx;
	color: #999;
}
.tips .title {
	margin-bottom: 30rpx;
}
.comfirm {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	line-height: 100rpx;
	font-size: 32rpx;
	color: #fff;
	background-color: #A0856A;
	text-align: center;
}
.discount {
    white-space: nowrap;
    font-size: 24rpx;
}