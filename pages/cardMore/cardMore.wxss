/* pages/cardMore/cardMore.wxss */
page{
  height: 100%
}
.tabBarCard{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
  border-top: 1rpx solid #f2f2f2;
  background: #fff
}
.iconf{
  width: 20%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #A0856A;
  font-size:24rpx 
}
.iconf text:nth-child(1){
  font-size: 36rpx;
  line-height: 36rpx;
  margin-bottom: 8rpx;
}
.iconf text:nth-child(2){
  color: #000;
  line-height: 26rpx
}
.contian{
  height: 100%;
  background: #f2f2f2
}
.buyBtn{
  width: 60%;
  background: #A0856A;
  color: #fff;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx
}
.imgBox{
  position: relative;
  padding: 5px;
  background-color: #FCFCFC;
}
.imgBox image{
  height: 348rpx;
  width: 100%;
  border-radius: 5px;
  display: block;
}
.imgBox view{
  height: 50rpx;
  font-size: 24rpx;
  width: calc(100% - 10px);
  color: #FF6600;
  background: rgba(255, 255, 255, 0.8);
  position: absolute;
  bottom: 5px;
  line-height: 50rpx;
  padding-left: 5px;
  box-sizing: border-box;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
.infoBox{
  background: #fff;
  padding:20rpx 40rpx;
  margin-bottom: 20rpx
}
.infoBox .title{
  font-size: 32rpx;
  font-weight: 400;
  color:#333333;
  line-height: 40rpx;
  margin-bottom: 20rpx
}
.infoBox .sogon{
  font-size: 28rpx;
  color:#999999;
  line-height: 40rpx;
  margin-bottom: 10rpx
} 
.infoBox .price{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-between;
  align-items: center;
}
.infoBox .price .priceBox{
  display: flex;
  align-items: center;
}
.infoBox .price .currentprice{
  color: #FF9900;
  font-size: 28rpx 
}
.infoBox .price .currentprice text{
  font-size: 48rpx ;
  font-weight: 400
}
.infoBox .price .originprice{
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #cccccc
}
.infoBox .price .originprice text{
  text-decoration: line-through
}
.infoBox .price .soldNum{
  font-size: 28rpx;
  color: #cccccc
}
.cardItem{
  background: #fff;
  padding: 40rpx 40rpx 130rpx;
}
.title{
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 20rpx;
}
.cardItem text{
  font-size: 24rpx;
  color: #999999;
  margin-left: 10rpx
}
.pdForm .pdFormItem{
  padding: 30rpx 0;
  border-bottom: 1rpx dashed #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pdForm .pdFormItem text:nth-child(1){
  font-size: 32rpx;
  /* font-weight: 700; */
  color: #333333;
  flex: 1;

}
.pdForm .pdFormItem text:nth-child(2){
  font-size: 32rpx;
  color: #FF9900
}
.pdForm .pdFormItem:last-child{
  border-bottom: none
}
.dialog{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index:1000
}

.headImageView {
  height: 162rpx;
  width: 163rpx
}

.headImageView image{
  height: 162rpx;
  width: 162rpx
}

.titleText {
  margin-top: 100rpx;
  margin-bottom: 50rpx;
  font-size: 38rpx;
  color: #020e0f;
}

.contentText {
  margin-bottom: 0px;
  font-size: 30rpx;
  color: #666;
}

.authBtn {
  margin-top: 70rpx;
  height: 80rpx;
  font-size: 38rpx;
  width: 330rpx;
  background: #a0856a;
  color: #fff;
  line-height: 80rpx;
  border-radius: 50rpx
}
.popup-title {
    font-size: 28rpx;
    text-align: center;
    line-height: 70rpx;
    border-bottom: 2rpx solid #eee;
    position: relative;
}
.popup-form {
    padding: 30rpx;
}
.balance-btn {
    margin-top: 30rpx;
    padding: 0 30rpx;
}
.code-btn {
    width: 80px;
}
.close-icon {
    color: #ccc;
    position: absolute;
    right: 30rpx;
}
.order-no {
    text-align: center;
    font-size: 28rpx;
    color: #ccc;
    padding: 30rpx;
}
.balance {
    font-size: 64rpx;
    text-align: center;
}
.balance .unit {
    font-size: 32rpx;
}