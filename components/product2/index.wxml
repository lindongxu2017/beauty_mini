<!--components/product/index.wxml-->
<view class="pdItem" bindtap="goForLook" data-id="{{item.id}}">
    <view class="img-wrapper">
        <image src="{{item.image_src}}" mode="aspectFill"></image>
    </view>
    <view class="titelPd">{{item.title}}</view>
    <view class="sogonPd">{{item.describe}}</view>
    <view class="price">
        <view class="priceItem">
            <text class="current_price">￥{{item.price}}</text>
            <!-- <text class="original_price">原价：<text>￥{{item.original_price}}</text></text> -->
        </view>
        <!-- <view class="goForLook">去预约</view> -->
        <!-- <image class="icon" src="/utils/img/u152.png" catchtap="join"></image> -->
        <text class="iconfont iconcart cart" catchtap="join"></text>
    </view>
</view>