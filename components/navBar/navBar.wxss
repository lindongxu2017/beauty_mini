/* components/navBar/navBar.wxss */
.topbar {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 99;
  background: #ffffff
}
.status {
  width: 100%;
}
.navbar {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.navbar_back {
  padding: 0 32rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
}

.navbar_back .iconfont {
  width: 21rpx;
  height: 34rpx;
  color: #000000
}

.navbar_title {
  position: absolute;
  left: 0;
  /* top: 0; */
  width: 100%;
  
  display: flex;

  align-items: center;
  z-index: -1; 
}
.navbar_title cover-view {
  /* word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis; */
  white-space: nowrap;
  font-size: 36rpx;
  margin-left: 40rpx;
  display: block;
}
.navbar_home {
  margin-left: 32rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 33rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background: rgba(0,0,0,0.1);
  box-sizing: border-box;
  padding: 10rpx 0;
}

.navbar_home cover-image:first-child {
  width: 32rpx;
  height: 32rpx;
  padding: 0 20rpx;
  border-right: 1px solid #ffffff;
}

.navbar_home cover-image:last-child {
  width: 32rpx;
  height: 32rpx;
  padding: 0 20rpx;
}
.navbar_back cover-image{
  width: 32rpx;
  height: 32rpx;
}
.navbar_title1{
  margin-left:50rpx
}